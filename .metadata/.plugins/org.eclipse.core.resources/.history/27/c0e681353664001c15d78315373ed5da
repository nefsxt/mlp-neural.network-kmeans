package neyronika1;
import java.util.Random;
import java.io.BufferedReader;
import java.io.File;  // Import the File class
import java.io.FileReader;
import java.io.IOException;  // Import the IOException class to handle error
import java.io.FileWriter;   // Import the FileWriter class
import java.lang.Math;
import java.util.Scanner; // Import the Scanner class to read text files




public class Main {
	public static void createFile(String FileName) {
	    try {
	        File myObj = new File(FileName);
	        if (myObj.createNewFile()) {
	          System.out.println("File created: " + myObj.getName());
	        } else {
	          System.out.println("File already exists.");
	        }
	    } catch (IOException e) {
	        System.out.println("An error occurred.");
	        e.printStackTrace();
	    }
	}
	

	
	public static void main(String[] args) {
	   		//dhmiourgoume ta dedomena
		createFile("dataset1.txt");
		createFile("c1.txt");
		createFile("c2.txt");
		createFile("c3.txt");
		createFile("c4.txt");

	        
	    Random rand = new Random();

		float[][] dataset = new float[8000][2];
	    for(int i = 0;i < 8000;i++) {
	    	dataset[i][0] = rand.nextFloat()*2 - 1;
	        dataset[i][1] = rand.nextFloat()*2 - 1;
	        output.WriteToFile("dataset1.txt",dataset[i][0],dataset[i][1]);
	    }
	    System.out.println("done");
	   
	    //katigoriopoihsh

		float[][] c1 = new float[8000][2];
		float[][] c2 = new float[8000][2];
		float[][] c3 = new float[8000][2];
		float[][] c4 = new float[8000][2];
		int c1size = 0;
		int c2size = 0;
		int c3size = 0;
		int c4size = 0;
	    for(int i = 0;i < 8000;i++) {
	    	c1[i][0] = -2;
	    	c2[i][0] = -2;
	    	c3[i][0] = -2;
	    	c4[i][0] = -2;
	    }
		
	    for(int i = 0;i < 8000;i++) {
	    	if(Math.pow(dataset[i][0] - 0.5,2) + Math.pow(dataset[i][1] - 0.5,2) < 0.16 ||
	    			Math.pow(dataset[i][0] + 0.5,2) + Math.pow(dataset[i][1] + 0.5,2) < 0.16) {
	    		c1[c1size][0] = dataset[i][0];
	    		c1[c1size][1] = dataset[i][1];
	    		c1size++;
	    	}else if(Math.pow(dataset[i][0] - 0.5,2) + Math.pow(dataset[i][1] + 0.5,2) < 0.16 ||
	    			Math.pow(dataset[i][0] + 0.5,2) + Math.pow(dataset[i][1] - 0.5,2) < 0.16) {
	    		c2[c2size][0] = dataset[i][0];
	    		c2[c2size][1] = dataset[i][1];
	    		c2size++;
	    	}else if((dataset[i][0] > 0 && dataset[i][1] > 0) ||
	    			(dataset[i][0] < 0 && dataset[i][1] < 0)) {
	    		c3[c3size][0] = dataset[i][0];
	    		c3[c3size][1] = dataset[i][1];
	    		c3size++;
	    		
	    	}else {
	    		c4[c4size][0] = dataset[i][0];
	    		c4[c4size][1] = dataset[i][1];
	    		c4size++;
	    	}
	    }
	    
//rnd
	    int rng = 0;
	    for(int i = 0;i < 8000;i++) {
			if(rand.nextFloat() < 0.1 && c1[i][0] != -2.0) { //c1
				rng = rand.nextInt(3)+1;
				if(rng == 1) {
			    	output.WriteToFile("c2.txt",c1[i][0],c1[i][1]);
				}else if (rng == 2) {
			    	output.WriteToFile("c3.txt",c1[i][0],c1[i][1]);
				}else if (rng == 3) {
			    	output.WriteToFile("c4.txt",c1[i][0],c1[i][1]);
				}
				c1[i][0] = -2;
			}
			if(rand.nextFloat() < 0.1 && c2[i][0] != -2.0) { //c2
				rng = rand.nextInt(3)+1;

				if(rng == 1) {
			    	output.WriteToFile("c1.txt",c2[i][0],c2[i][1]);
				}else if (rng == 2) {
			    	output.WriteToFile("c3.txt",c2[i][0],c2[i][1]);
				}else if (rng == 3) {
			    	output.WriteToFile("c4.txt",c2[i][0],c2[i][1]);
				}
				c2[i][0] = -2;
			}
			if(rand.nextFloat() < 0.1 && c3[i][0] != -2.0) { //c3
				rng = rand.nextInt(3)+1;
				if(rng == 1) {
			    	output.WriteToFile("c1.txt",c3[i][0],c3[i][1]);
				}else if (rng == 2) {
			    	output.WriteToFile("c2.txt",c3[i][0],c3[i][1]);
				}else{
			    	output.WriteToFile("c4.txt",c3[i][0],c3[i][1]);
				}
				c3[i][0] = -2;
			}
			if(rand.nextFloat() < 0.1 && c4[i][0] != -2.0) { //c4
				rng = rand.nextInt(3)+1;
				if(rng == 1) {
			    	output.WriteToFile("c1.txt",c4[i][0],c4[i][1]);
				}else if (rng == 2) {
			    	output.WriteToFile("c2.txt",c4[i][0],c4[i][1]);
				}else if (rng == 3) {
			    	output.WriteToFile("c3.txt",c4[i][0],c4[i][1]);
				}
				c4[i][0] = -2;
			}
	    }

		
		
		
	    for(int i = 0;i < 8000;i++) {
	    	if(c1[i][0] != -2.0) {
		    	output.WriteToFile("c1.txt",c1[i][0],c1[i][1]);
	    	}
	    	if(c2[i][0] != -2.0) {
		    	output.WriteToFile("c2.txt",c2[i][0],c2[i][1]);
	    	}
	    	if(c3[i][0] != -2.0) {
		    	output.WriteToFile("c3.txt",c3[i][0],c3[i][1]);
	    	}
	    	if(c4[i][0] != -2.0) {
		    	output.WriteToFile("c4.txt",c4[i][0],c4[i][1]);
	    	}
	    }

	}
}
